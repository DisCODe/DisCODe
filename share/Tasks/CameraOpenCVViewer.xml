<?xml version="1.0" encoding="utf-8"?>
<Task>
	<Subtasks>
		<Subtask name="main">
			<Executor name="Thr1" type="continuous">
				<param name="main_component">Src1</param>

				<Component name="Src1" type="CameraOpenCV">
				</Component>

				<Component name="Wnd1" type="CvWindow">
					<param name="title">Preview</param>
				</Component>
			</Executor>
		</Subtask>
	</Subtasks>

	<!-- Event connections -->
	<Events>
		<Event source="Source.newImage" destination="Window.onNewImage"/>
	</Events>

	<!-- Data stream assignments -->
	<DataStreams>
		<Source>
			<out_img type="out" group="Con"/>
		</Source>

		<Window>
			<in_img type="in" group="Con"/>
		</Window>
	</DataStreams>

</Task>
