<?xml version="1.0" encoding="utf-8"?>
<Task>
	<!-- List of components -->
	<Components>
		<Movie type="Movie" thread="Thread1" group="s1">
			<filename>zakaz_1.1280.avi</filename>
		</Movie>

		<Blur type="CvGaussianBlur" thread="Thread1" group="s1">
			<kernel>7 7</kernel>
		</Blur>

		<ColorConv type="CvColorConv" thread="Thread1" group="s1">
			<type>BGR2HSV</type>
		</ColorConv>

		<LUT type="MS_Sign_LUT" thread="Thread1" group="s1">
				
		</LUT>

		<Window type="CvWindow" thread="Thread1" group="s1">
			<title>Preview</title>
		</Window>
	</Components>

	<!-- Threads of execution -->
	<Executors>
		<Thread1 type="continous">
			<main_component>Movie</main_component>
			<iterations>200</iterations>
		</Thread1>
	</Executors>

	<!-- Event connections -->
	<Events>
		<Event source="Movie.newImage"     destination="Blur.onNewImage"/>
		<Event source="Blur.newImage"      destination="ColorConv.onNewImage"/>
		<Event source="ColorConv.newImage" destination="LUT.onNewImage"/>
		<Event source="LUT.newImage"       destination="Window.onNewImage"/>
	</Events>

	<!-- Data stream assignments -->
	<DataStreams>
		<Movie>
			<out_img type="out" group="Con1"/>
		</Movie>

		<Blur>
			<in_img type="in" group="Con1"/>
			<out_img type="out" group="Con2"/>
		</Blur>

		<ColorConv>
			<in_img type="in" group="Con2"/>
			<out_img type="out" group="Con3"/>
		</ColorConv>

		<LUT>
			<in_img type="in" group="Con3"/>
			<out_segments type="out" group="Con4"/>
		</LUT>

		<Window>
			<in_img type="in" group="Con4"/>
		</Window>
	</DataStreams>

</Task>
