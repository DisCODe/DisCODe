<TaskDescription>
	<ProcessTable>
		<Process id="P1">
			<Address>127.0.0.1</Address>
			
			<Task id="CameraOpenCV" name="Source1">
				<Property name="Framerate" type="int">25</Property>
				<Property name="PropName" type="myCustomType">Dupa blada</Property>
				
				<Port name="NewImage" connection="con1" />
			</Task>
			
			<Task id="EdgeDetector" name="Processor1">
				<Property name="KernelSize" type="int">3</Property>
				<Property name="Method" type="string">Sobel</Property>
				
				<Port name="onNewImage" connection="con1" />
				
				<!--
					InPort<IplImage*> onNewImage("onNewImage", &handler);
				-->
				
				<Port name="ImageProcessed" connection="con2" />
				<!--
					OutPort<IplImage*> ImageProcessed("ImageProcessed");
				-->
			</Task>
			
			<Task id="MovieWriter" name="Sink1">
				<Property name="filename" type="string">out.avi</Property>
				
				<Port name="onNewImage" connection="con2" />
			</Task>
			
		</Process>
	</ProcessTable>
	
	<ConnectionTable>
		<Connection>
			<Source>Source1</Source>
			<Event>NewImage</Event>
			<Destination>Processor1</Destination>
			<Handler>onNewImage</Handler>
		</Connection>
		
		<Connection>
			<Source>Processor1</Source>
			<Event>ImageProcessed</Event>
			<Destination>Sink1</Destination>
			<Handler>onNewImage</Handler>
		</Connection>
	</ConnectionTable>
	
</TaskDescription>
